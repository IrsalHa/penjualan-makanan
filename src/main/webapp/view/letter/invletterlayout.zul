<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native" xmlns:x="xhtml">
	<window width="98%" border="normal"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.InvLetterLayoutVm')"
		validationMessages="@id('vmsgs')">
		<caption />
					<div class="card border border-dark">
				<div class="card-header" id="divRoot">
					<n:h5>
						<n:i class="fas fa-envelope-open-text"></n:i>
						<label value="Invoice Letter Template" style="font-size:16px" />
					</n:h5>
				</div>
			</div>
		<div class="card"
			form="@id('e') @load(vm.objForm) @save(vm.objForm, before='doSave') @validator(vm.validator)">
	<!-- 		<x:h5 class="card-header">
				<n:i class="fas fa-envelope-open-text"></n:i>
				Invoice Letter Template
			</x:h5> -->

			<div class="card-body">
				<div class="row">
					<div class="col">
						<label class="form-label">Template Name</label>
						<textbox class="form-control"
							value="@bind(e.templatename)" maxlength="50" width="100%"
							style="font-size: 16px" />
						<label class="text-danger"
							value="@load(vmsgs['templatename'])">
						</label>
					</div>
				</div>
				<n:hr />
				<div class="row">
					<div id="divLetter"
						class="col-md-8 col-sm-12 col-12">

					</div>
					<div class="col-md-4 col-sm-12 col-12">
						<grid id="gridVar">
							<columns>
								<column label="Variables" />
							</columns>
						</grid>
					</div>
				</div>

			</div>

			<x:h5 class="card-footer">
				<button label="Save Template" class="btn btn-primary"
					width="100%" autodisable="self" onClick="@command('doSave')" />
			</x:h5>
		</div>
	</window>
</zk>