<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native" xmlns:x="xhtml">
	<window id="winInLetterCopy" width="70%" border="normal"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.InvLetterCopyVm')"
		validationMessages="@id('vmsgs')">
		<caption />
		<div class="card"
			form="@id('e') @load(vm.objForm) @save(vm.objForm, before='doSave') @validator(vm.validator)">
			<x:h5 class="card-header">
				<n:i class="fas fa-envelope-open-text"></n:i>
				Copy of Invoice Letter Template
			</x:h5>

			<div class="card-body">
				<div class="row">
					<div class="col">
						<label class="form-label">Template Name</label>
						<textbox class="form-control"
							value="@bind(e.templatename)" maxlength="50" width="100%"
							style="font-size: 16px" />
						<label class="text-danger"
							value="@load(vmsgs['templatename'])">
						</label>
					</div>
				</div>
			</div>

			<x:h5 class="card-footer">
				<button label="Copy Template" class="btn btn-primary"
					width="100%" autodisable="self" onClick="@command('doSave')" />
			</x:h5>
		</div>
	</window>
</zk>