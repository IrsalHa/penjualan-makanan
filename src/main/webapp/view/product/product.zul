<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native" xmlns:x="xhtml">
	<div
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.MproductVm')">
		<div class="add_project.zul card ">

			<x:h5 class="card-header">${labels.common.searching}</x:h5>

			<div class="card-body">
				<div class="input-group">
					<x:input n:placeholder="Kode Product"
						value="@bind(vm.searchproductcode)" type="text"
						class="form-control" id="txsearchIdProduct" />
					<x:input n:placeholder="Nama Product"
						value="@bind(vm.searchproductname)" type="text"
						class="form-control" id="txsearchNamaProduct" />

					<x:button class="btn btn-outline-secondary mx-2"
						type="button" id="btnResetSearch" onClick="@command('doReset')">
						Reset </${labels.common.reset}>

						<x:button class="btn btn-outline-success"
							onClick="@command('doSearch')" type="button" id="btnSearch">
							${labels.common.search}
						</x:button>
				</div>
			</div>
		</div>

		<div class="card mt-4">

			<x:h5 class="card-header">
				Master Product
				<x:span>
					<!-- 
						<x:button class="btn btn-outline-success"
						type="button" id="addProduct"
						onClick="@command('ModalAddproduct')">
						+ Add Product
						</x:button>
					-->
					<x:button class="btn btn-outline-primary"
						type="button" id="refreshProduct"
						onClick="@command('doSearch')">
						Refresh
					</x:button>
				</x:span>


			</x:h5>

			<div class="card-body">

				<grid id="tableData" mold="paging" pagingPosition="both"
					pageSize="5" emptyMessage="Data Tidak Ada">
					<columns>
						<column width="5%" label="${labels.common.no}"
							align="center" />
						<column width="20%"
							label="${labels.product.productcode}" align="left" />
						<column width="20%"
							label="${labels.product.productname}" align="center" />
						<column width="20%"
							label="Fee Calculation Type" align="center" />
							<column width="20%"
							label="No rekening" align="center" />
							<column width="20%"
							label="Adminfee" align="center" />


						<column label="Action" align="center" />
					</columns>
				</grid>
			</div>
		</div>

	</div>
</zk>