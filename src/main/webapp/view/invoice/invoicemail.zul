<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:ca="http://www.zkoss.org/2005/zk/client/attribute">
	<window id="winCustproductform" width="70%"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.InvoiceMailVm')"
		validationMessages="@id('vmsgs')" border="normal" closable="true"
		action="hide: slideUp" position="center,center"
		style="margin: 10px; align:center">
		<caption />
		<div>
			<h:form>
				<div class="container">
					<div class="row">
						<div class="col">
							<div
								class="card border h-100 w-100 d-inline-block">
								<h:h5 class="card-header">
									Invoice Letter
								</h:h5>
								<div class="card-body">
									<div class="mb-3">
										<label class="form-label">
											Customer E-Mail Address Intended For Billing
										</label>
										<textbox class="form-control"
											value="@bind(vm.email)" maxlength="100" cols="70" />
									</div>

								</div>
							</div>
						</div>
					</div>

				</div>

				<button id="btSave" style="width: 100%"
					onClick="@command('doEmail')"
					class="btn btn-outline-primary mt-3">
					Send E-Mail
				</button>

			</h:form>
		</div>
	</window>
</zk>