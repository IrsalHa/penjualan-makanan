<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:ca="http://www.zkoss.org/2005/zk/client/attribute">
	<window id="modalViewEditProduct"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.setup.AddProjectVM')"
		validationMessages="@id('vmsgs')" border="normal" closable="true"
		action="hide: slideUp" position="center,center">
		<caption></caption>
		<div
			form="@id('fx') @load(vm.propmproduct) @save(vm.propmproduct, before='doUpdate') @validator(vm.validator)">
			<h:form>
				
				<div class="mb-3">
					<label class="form-label">ID Product</label>
					<textbox id="viewProductCode" maxlength="10" class="form-control"
						value="@bind(fx.productcode)" />
					<label class="text-danger"
						value="@load(vmsgs['productcode'])">
					</label>
				</div>

				<div class="mb-3">
					<label class="form-label">Nama Product</label>
					<textbox id="viewProductName" maxlength="50" type="text" class="form-control"
						value="@bind(fx.productname)" />
					<label class="text-danger"
						value="@load(vmsgs['productname'])">
					</label>

				</div>


				<button id="btnSubmitView" onClick="@command('doUpdate')"
					class="btn btn-outline-primary">
					Submit
				</button>
			
			</h:form>
		</div>
	</window>
</zk>