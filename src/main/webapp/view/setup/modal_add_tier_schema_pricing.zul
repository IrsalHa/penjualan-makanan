<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:ca="http://www.zkoss.org/2005/zk/client/attribute">
	<window id="modal_add_tier_schema_pricing"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.setup.SchemaPricingVM')"
		validationMessages="@id('vmsgs')" border="normal" closable="true"
		action="hide: slideUp" position="center,center">
		<caption>Add Tier</caption>
		<div
			form="@id('fx') @load(vm.propmpMproducttier) @save(vm.propmpMproducttier, before='doSaveAddTier') @validator(vm.validatorAddTier)">
			<h:form>

				<div class="mb-3 shadow-md">
					<div class="row">

						<div class="col">
							<span>Tier Bottom</span>
							<intbox class="form-control"
								value="@bind(fx.tierbottom)" />
							<separator></separator>
							<label class="text-danger"
								value="@load(vmsgs['tierBottomMsg'])">
							</label>

						</div>



						<div class="col">
							<span>Tier Top</span>
							<intbox class="form-control"
								value="@bind(fx.tiertop)">
							</intbox>

							<separator></separator>
							<label class="text-danger"
								value="@load(vmsgs['tierTopMsg'])">
							</label>



						</div>



						<div class="col">
							<span>Fee</span>
							<decimalbox class="form-control"
								value="@bind(fx.fee)">
							</decimalbox>
							<separator></separator>
							<label class="text-danger"
								value="@load(vmsgs['feeMsg'])">
							</label>

						</div>










					</div>
				</div>



				<button onClick="@command('doSaveAddTier')"
					class="btn btn-outline-primary">
					Submit
				</button>
			</h:form>
		</div>
	</window>
</zk>