<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:ca="http://www.zkoss.org/2005/zk/client/attribute">
	<window id="modalAdduser"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.CustomerVM')"
		validationMessages="@id('vmsgs')" border="normal" closable="true"
		action="hide: slideUp" position="center,center">
		<caption>Add Customer Form</caption>
		<div
			form="@id('fx') @load(vm.propmcust) @save(vm.propmcust, before='doSave') @validator(vm.validator)">
			<h:form>
				<div class="row">
					<div class="col-sm">
						<div class="mb-3">
							<label class="form-label">
								Customer Name
							</label>
							<h:input type="text" class="form-control"
								value="@bind(fx.custname)" />
							<label class="text-danger"
								value="@load(vmsgs['custname'])">
							</label>
						</div>

					</div>
					<div class="col-sm">
						<div class="mb-3">
							<label class="form-label">
								Cust groupname
							</label>
							<div class="col">
								<combobox id="cmbuserole"
									readonly="true" width="300px">
								</combobox>
								<label class="text-danger"
									value="@load(vmsgs['cmbFeeMsg'])">
								</label>
							</div> 	
						</div>
					</div>

				</div>
				<div class="mb-3">
					<label class="form-label">Alamat</label>
					<h:input type="text" class="form-control"
						value="@bind(fx.address1)" />
					<label class="text-danger"
						value="@load(vmsgs['address1'])">
					</label>
				</div>
				<div class="mb-3">
					<label class="form-label">Alamat2</label>
					<h:input type="text" class="form-control"
						value="@bind(fx.address2)" id="viewaddress2" />
					<label class="text-danger"
						value="@load(vmsgs['address2'])">
					</label>
				</div>
				<div class="mb-3">
					<label class="form-label">Alamat3</label>
					<h:input type="text" class="form-control"
						value="@bind(fx.address3)" id="viewaddress3" />
					<label class="text-danger"
						value="@load(vmsgs['address3'])">
					</label>
				</div>
				<div class="mb-3">
					<label class="form-label">Alamat4</label>
					<h:input type="text" class="form-control"
						value="@bind(fx.address4)" id="viewaddress4" />
					<label class="text-danger"
						value="@load(vmsgs['address4'])">
					</label>
				</div>
				<div class="mb-3">
					<div class="row">
						<div class="col-sm">
							<label class="form-label">Kota</label>
							<h:input type="text" class="form-control"
								value="@bind(fx.city)" id="viewcity" />
							<label class="text-danger"
								value="@load(vmsgs['city'])">
							</label>
						</div>
						<div class="col-sm">
							<label class="form-label">kode Pos</label>
							<textbox maxlength="5"
								id="viewZipcode" class="form-control" value="@bind(fx.zipcode)" />
							<label class="text-danger"
								value="@load(vmsgs['zipcode'])">
							</label>
						</div>
					</div>
				</div>
						<div class="col-sm">
							<label class="form-label">Email</label>
							<textbox maxlength="100"
								id="viewemailpic" class="form-control" value="@bind(fx.picemail)" />
							<label class="text-danger"
								value="@load(vmsgs['email1'])">
							</label>
						</div>
				<div class="mb-3">

					<!-- <label class="text-danger"
						value="@load(vmsgs['zipcode'])">
						</label> -->
				</div>
				<div class="mb-3">
					<div class="row">
						<div class="col-sm">
							<label class="form-label">Nama PIC</label>
							<h:input type="text" class="form-control"
								value="@bind(fx.picname)" id="viewpicname" />
							 <label class="text-danger"
								value="@load(vmsgs['picname'])">
								</label>
						</div>
						<div class="col-sm">
							<label class="form-label">No PIC</label>
							<h:input type="number" min="1" max="5"
								id="viewnopic" class="form-control" value="@bind(fx.picphone)" />
									<label class="text-danger"
								value="@load(vmsgs['nopic'])">
								</label>
						</div>
					</div>
				</div>




				<button onClick="@command('doSave')"
					class="btn btn-outline-primary">
					Submit
				</button>
			</h:form>
		</div>
	</window>
</zk>