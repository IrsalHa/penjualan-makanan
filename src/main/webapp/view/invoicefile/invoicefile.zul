<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native" xmlns:x="xhtml">
	<div
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.InvoicefileVm')"
		validationMessages="@id('vmsgs')">
		<div class="card mt-4">
			<x:h5 class="card-header">List DGO File</x:h5>
			<div class="card-body">
				<groupbox mold="3d">
					<caption label="${labels.common.searching}"
						iconSclass="z-icon-search" />
					<grid>
						<columns>
							<column width="130px" />
							<column />
						</columns>
						<rows>
							<row>
								<label value="Tahun" />
								<intbox value="@bind(vm.year)"
									cols="20" />
							</row>
							<row>
								<label value="Bulan" />
								<combobox id="cbMonth" cols="20"
									selectedItem="@bind(vm.month)" />
							</row>
						</rows>
						<foot>
							<footer />
							<footer>
								<div class="row">
									<div class="col-md-6">
										<n:div role="group">
											<button
												class="btn btn-info btn-sm" label="${labels.common.search}"
												onClick="@command('doSearch')" />
											<button
												class="btn btn-info btn-sm" label="${labels.common.reset}"
												onClick="@command('doReset')" />
										</n:div>
									</div>
								</div>
							</footer>
						</foot>
					</grid>
				</groupbox>

				<div class="row">
					<div class="col-md-10" />
					<div class="col-md-2" align="right">
						<label value="Total Record :"
							style="font-weight: bold" />
						<label value="@load(vm.pageTotalSize)"
							style="font-weight: bold" />
					</div>
				</div>
				<grid id="grid"
					emptyMessage="${labels.common.emptymsg}">
					<columns>
						<column label="No" align="right" width="40px" />

						<column label="NAMAPEG" align="center"
							width="15%" />
						<column label="NOREKDB" align="right"
							width="15%" />
						<column label="NOREGKD" align="right"
							width="20%" />
						<column label="JMLGAJI" align="center"
							width="20%" />
						<column label="KETERANGAN1" align="center"
							width="20%" />
						<column label="KETERANGAN2" align="center"
							width="20%" />
						<column label="Status" align="center"
							width="20%" />
						<column label="Action" align="center"
							width="20%" />
					</columns>
				</grid>
				<separator />
			</div>
		</div>
	</div>
</zk>