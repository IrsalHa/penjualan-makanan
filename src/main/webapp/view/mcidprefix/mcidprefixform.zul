<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:ca="http://www.zkoss.org/2005/zk/client/attribute">
	<window id="winMcidprefix"
		viewModel="@id('vm') @init('com.vym.tugas.viewmodel.McidprefixVm')"
		validationMessages="@id('vmsgs')" border="normal" closable="true"
		action="hide: slideUp" position="center,center">
		<caption />
		<div class="card border border-dark">

			<div class="card-header" id="divRoot">
				<h:h5>
					<h:i class="fas fa-user"></h:i>
					<label value="Cid Prefix Form"
						style="font-size:16px" />
				</h:h5>
			</div>
		</div>

		<div class="card">
			<!-- 	<div class="card-header" id="divRoot">
				<n:h5>
				<n:i class="fas fa-user"></n:i>
				<label value="Cid Prefix Form" style="font-size:16px" />
				</n:h5>
				</div> -->


			<div class="card-body pt-1 pb-1 pl-1 pr-1"
				form="@id('e') @load(vm.mcidprefix) @save(vm.mcidprefix, before='doSave') @validator(vm.validator)">
				<h:form>

					<div class="mb-3">

						<div class="lg-3">
							<label class="form-label ">
								CID Prefix
							</label>
							<textbox maxlength="5"
								class="form-control h-auto inputanmcidprefix"
								value="@bind(e.cidprefix)">
							</textbox>

							<label class="text-danger"
								value="@load(vmsgs['cidprefix'])">
							</label>
						</div>

						<div class="lg-3">
							<label class="form-label ">
								Suffix Length
							</label>
							<intbox
								class="form-control h-auto inputanmcidprefix"
								value="@bind(e.suffixlen)">
							</intbox>
							<label class="text-danger"
								value="@load(vmsgs['suffixlen'])">
							</label>
						</div>
					</div>

					<div id="btnSave">
						<button onClick="@command('doSave')"
							width="100%" class="btn btn-primary">
							${labels.common.save}
						</button>
					</div>

				</h:form>
			</div>
		</div>
	</window>
</zk>