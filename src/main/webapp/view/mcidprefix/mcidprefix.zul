<!DOCTYPE html>
<?page title="${desktop.webApp.appName}" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk xmlns:w="client" xmlns:n="native" xmlns:x="xhtml">

	<div class="card border border-dark">
		<div class="card-header" id="divRoot">
			<n:h5>
				<n:i class="fas fa-address-card"></n:i>
				<label value="CID Prefix" style="font-size:16px" />
			</n:h5>
		</div>
	</div>

	<div class="card"
		viewModel="@id('vm')@init('com.vym.tugas.viewmodel.McidprefixVm')">
		<!-- 		<div class="card-header" style="background-color:white;">
			<n:h5>
			
			<n:i class="fas fa-address-card"></n:i>
			CID Prefix
			</n:h5>
			</div> -->
		<div class="card-body">
			<groupbox mold="3d">
				<caption label="${labels.common.searching}"
					iconSclass="z-icon-search" />
				<grid>
					<columns>
						<column width="170px" />
						<column />
					</columns>
					<rows>
						<row>
							<label value="CID Prefix" />
							<div class="col-3">
								<x:input
									value="@bind(vm.searchcidprefix)"
									style="height:23px; border-color:#DCDFE1;" type="text"
									class="form-control" cols="25" maxlength="20" />
							</div>
						</row>

						<row>
							<label value="Suffix Length" />
							<div class="col-3">
								<x:input
									value="@bind(vm.searchsuffixlen)"
									style="height:23px; border-color:#DCDFE1;" type="text"
									class="form-control" cols="25" maxlength="20" />
							</div>
						</row>
					</rows>
					<foot>
						<footer />
						<footer>
							<div class="row">
								<div class="col-md-2">
									<n:div role="group">
										<button autodisable="self"
											label="${labels.common.search}" class="btn btn-info btn-sm"
											onClick="@command('doSearch')">
										</button>
										<button autodisable="self"
											label="${labels.common.reset}" class="btn btn-info btn-sm"
											onClick="@command('doReset')">
										</button>
									</n:div>
								</div>
							</div>
						</footer>
					</foot>
				</grid>
			</groupbox>
			<separator />
			<separator />
			<div class="row">
				<div class="col-md-12" align="right">
					<button autodisable="self"
						label="${labels.common.addnew}" sclass="btn btn-primary btn-sm"
						iconSclass="z-icon-plus" onClick="@command('doOpenAdd')">
					</button>
				</div>
			</div>
			<separator />
			<separator />

			<grid id="grid" mold="paging" pagingPosition="both"
				pageSize="20" emptyMessage="${labels.common.emptymsg}">
				<columns>
					<column width="5%" label="${labels.common.no}"
						align="center" />
					<column width="20%" label="CID Prefix"
						align="center" />
					<column width="20%" label="Suffix Length"
						align="center" />
					<column width="20%" label="Action" align="center" />

				</columns>
			</grid>
		</div>
	</div>

</zk>